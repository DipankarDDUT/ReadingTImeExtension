

{
    "manifest_version": 3,
    "name": "Reading time",
    "version": "1.0",
    "description": "Add the reading time to any webpage",
    "content_scripts": [
        {
            "js": ["script.js"],
            "matches": [
                "https://*/*"
            ]
        }
    ],
      "action": {
    "default_popup": "extension.html",
    "default_icon": "images/icon-48.png"
  }
}
